{{#if open}}
  {{#bs-modal open=open
    onHide=(action "onHide")
    onHidden=(action (mut open) false)
    size=modalSize
    class="modal-with-form"
    as |modal|}}
    {{#modal.header}}
      <h4 class="modal-title">{{title}}</h4>
    {{/modal.header}}
    {{#modal.body}}
      {{component form
        model=model
        modal=modal
        onSave=(action "onFormSuccess")
        onError=(action "onFormError")}}
    {{/modal.body}}
  {{/bs-modal}}
{{/if}}
