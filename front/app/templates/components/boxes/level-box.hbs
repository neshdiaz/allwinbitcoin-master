<div class="box-header with-border">
  <h3 class="box-title">
    {{t "level_box"}}
  </h3>
  <div class="pull-right box-tools">
    <button type="button" class="btn btn-primary btn-sm"
      {{action "createLevel"}}>
      {{t "action_create_level"}}
    </button>
  </div>
</div>
<div class="box-body">
  <div class="filters">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-8">
        {{forms/search-form modelName="level"}}
      </div>
    </div>
  </div>

  {{tables/level-table}}
</div>

{{modals/form-modal
  form="forms/level-form"
  open=openModal
  model=model
  modalSize="sm"
  title=(t "title_create_level_form")
  onFormSuccess=(action "onFormSuccess")
  }}