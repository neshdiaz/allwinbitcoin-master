<div class="login-logo">
  <img src="/images/logo.png" class="img-responsive">
</div>

<div class="box-body">
  <div class="text-center">
    {{google-translate}}
  </div>
  <br>
  {{#if model.sponsor}}
    <h3 class="text-center">
      {{t "sponsor_hint"}}
      <br>
      <strong>
        {{model.sponsor.username}}
      </strong>
    </h3>
    <br>
  {{else}}
    {{#if sponsorError}}
      <p class="login-box-msg text-danger">
        <strong>IMPORTANTE</strong>. El patrocinador "{{sponsor_text}}" no existe
        en la base de datos. Verifique con su patrocinador el link de referido, si
        el problema persiste favor enviar un correo a <a href="mailto:info@allwinbitcoin.com">
          info@allwinbitcoin.com</a>.
      </p>
    {{else}}
      <p class="login-box-msg">
        {{t "msg_register"}}
      </p>
    {{/if}}
  {{/if}}

  {{#if (not sponsorError)}}
    {{forms/register-form model=model onSave=(action "onSuccess")}}
  {{/if}}

  {{#link-to "login" class="text-center" event="mousedown"}}
    {{t "msg_already_register"}}
  {{/link-to}}

</div>