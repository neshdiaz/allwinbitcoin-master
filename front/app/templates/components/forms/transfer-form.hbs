{{#bs-form onSubmit=(perform save model) novalidate=true model=model as |form|}}
  <div class="alert alert-danger">
    <strong>
    <em>
      {{t "msg_for_new_payment"}}
      {{app.user.config.transferFeeDummy}} {{app.user.config.currency}}
    </em>
    </strong>
  </div>

  {{form.element property="to" label=(t "to_hint")
    autofocus=true
    placeholder=(t "to_placeholder")
    }}
  {{form.element property="value"
      label=(concat
        (t "value_hint")
        (concat " " app.user.config.currency)
      )
      controlType="number"}}
  {{form.element property="secondKey"
    label=(t "second_key_hint")
    controlType="password"}}

  <div class="row">
    <!-- /.col -->
    <div class="col-xs-6 col-xs-offset-3">
      {{#bs-button type="primary" buttonType="submit" block=true
        class="btn-flat"}}
        {{#if save.isRunning}}
          {{fa-icon "circle-o-notch" spin=true}}
        {{else}}
          {{t "action_create"}}
        {{/if}}
      {{/bs-button}}
    </div>
    <!-- /.col -->
  </div>
{{/bs-form}}
