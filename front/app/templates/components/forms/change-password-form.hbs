{{#bs-form onSubmit=(perform save model) novalidate=true model=model as |form|}}
  {{form.element property="currentPassword" label=(t "current_password_hint")
    controlType="password" autofocus=true}}
  <hr>
  {{form.element property="password" label=(t "new_password_hint")
      controlType="password"}}
  {{form.element property="passwordConfirmation" label=(t "password_confirmation_hint")
    controlType="password"}}

  <div class="row">
    <!-- /.col -->
    <div class="col-xs-6 col-xs-offset-3">
      {{#bs-button type="primary" buttonType="submit" block=true
        class="btn-flat"}}
        {{#if save.isRunning}}
          {{fa-icon "circle-o-notch" spin=true}}
        {{else}}
          {{t "action_update"}}
        {{/if}}
      {{/bs-button}}
    </div>
    <!-- /.col -->
  </div>
{{/bs-form}}
