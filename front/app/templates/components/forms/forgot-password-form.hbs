{{#bs-form onSubmit=(perform save model) novalidate=true model=model as |form|}}

  <p>
    <em>
    {{t "msg_for_new_forgot_password"}}
    </em>
  </p>

  {{form.element property="identifier"
    label=(t "identifier_hint")
    autofocus=true}}
  <hr>

  <div class="row">
    <!-- /.col -->
    <div class="col-xs-6 col-xs-offset-3">
      {{#bs-button type="primary" buttonType="submit" block=true
        class="btn-flat"}}
        {{#if save.isRunning}}
          {{fa-icon "circle-o-notch" spin=true}}
        {{else}}
          {{t "action_send"}}
        {{/if}}
      {{/bs-button}}
    </div>
    <!-- /.col -->
  </div>
{{/bs-form}}
